<% content_for :title, 'All Tags' %>

<h1><%= yield :title %></h1>

<% if @tags.any? %>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <% if signed_in? %>
                    <th scope="col"></th>
                <% end %>
            </tr>
        </thead>
        <tbody>
            <% @tags.each do |tag| %>
                <tr>
                    <th scope="row"><%= tag.id %></th>
                    <td><%= render 'tag', tag: tag, cached: true %></td>
                    <td>
                        <% if tag.description.blank? %>
                            <span class="text-muted font-italic">
                                There is no description for this tag... yet!
                            </span>
                        <% else %>
                            <span class="text-secondary">
                                <%= tag.description.truncate(64).gsub(/\n+/, ' ') %>
                            </span>
                        <% end %>
                    </td>
                    <% if signed_in? %>
                        <td>
                            <%= link_to 'Edit', edit_tag_path(tag) %> |
                            <%= link_to 'Delete', tag,
                               method: :delete,
                               class: 'text-danger',
                               data: { confirm: 'Are you sure?' } %>
                        </td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= will_paginate %>
<% else %>
    <p class="text-secondary font-italic">
        There is no tag... yet!
        <% if signed_in? %>
            <%= link_to 'New Tag', new_tag_path %>
        <% end %>
    </p>
<% end %>
